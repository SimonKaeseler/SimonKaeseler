<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plooder.View.View.MainPage"
             Title="MainPage"
             Padding="10, 0, 10, 10">
 <Grid>
   <ListView x:Name="ItemView">
     <ListView.ItemTemplate>
       <DataTemplate>
         <ViewCell>
           <ViewCell.View>
             <StackLayout Padding="5,5,5,5" Orientation="Horizontal">
               <Label Text="{Binding Name}" TextColor="Fuchsia"/>
             </StackLayout>
           </ViewCell.View>
         </ViewCell>
       </DataTemplate>
     </ListView.ItemTemplate>
   </ListView>
 
  <Label Text="test" TextColor="Fuchsia"></Label>
 </Grid>
    

</ContentPage>